<%= render 'shared/errors' if @errors%>

<%= form_for [@neighborhood, @review] do |f| %>
<%= f.label :rating %>
<%= f.select :rating, Review::RATING, include_blank: "Please Rate" %>
<%= rating_for @neighborhood, "neighborhood", disable_after_rate: false %>

  <%= f.label :description, "Review" %>
  <%= f.text_area :description %>

  <%= f.submit "Edit Review" %>
<% end %>
