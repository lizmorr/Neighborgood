<% @reviews.each do |review| %>
  <div class="review" id="<%= review.id %>">
    <%= review.rating %>
    <%= review.description %>
    <%= review.user.email %>
    <% if !review.voted_on_by?(current_user) %>
      <%= link_to "Upvote", review_upvotes_path(review), method: :post %>
      <%= link_to "Downvote", review_downvotes_path(review), method: :post %>
    <% end %>
    <p>Votes: <%= review.total_votes(@score) %></p>
  </div>
<% end %>
