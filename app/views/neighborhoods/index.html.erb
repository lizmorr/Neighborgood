<%= render 'shared/errors' if @errors%>

<fieldset class="tagline">
  <div class="bg"></div>
  <div class="neigh"><h1>LOVE YOUR</h1></div>
  <div class="hood"><h1>NEIGHBORHOOD</h1></div>
</fieldset>

<div class="row">
  <%= paginate @neighborhoods %>
  <% @neighborhoods.each do |neighborhood| %>
    <div class="large-4 columns" id="neighborhood-list">
      <%= image_tag neighborhood.image.url, size: "300x300"  %>
      <div class="row labelrow">
        <div class="small-12 columns"><%= link_to neighborhood.name, neighborhood_path(neighborhood) %></div>
        <div class="small-12 columns"><%= neighborhood.location.upcase %></div>
      </div>
    </div>
  <% end %>
</div>
