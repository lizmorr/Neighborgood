<%= render "shared/errors" %>

<%= form_for @neighborhood do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :location %>
  <%= f.select :location,
      Neighborhood::LOCATIONS,
      :include_blank => "Please Choose A Location" %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit "Submit" %>
<% end %>
