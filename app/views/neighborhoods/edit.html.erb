<% @errors = @neighborhood.errors %>
<%= render "shared/errors" %>

<%= form_for @neighborhood do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :location %>
  <%= f.select :location,
      Locations: Neighborhood::LOCATIONS %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit "Submit" %>
<% end %>
